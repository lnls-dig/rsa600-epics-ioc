# Frequency Span
record(ai, "$(P)$(R)Span-RB"){
  field(DESC, "Get frequency span")
  field(PREC, "1")
  field(EGU, "Hz")
  field(VAL, "700000")
}

record(ao, "$(P)$(R)Span-SP"){
  field(DESC, "Set frequency span")
  field(DRVH, "15")
  field(DRVL, "1")
  field(PREC, "1")
  field(EGU, "Hz")
  field(VAL, "700000")
}

